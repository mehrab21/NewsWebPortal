@model IEnumerable<NewsWebPortal.Models.Domain.NewsPaperDTO>

@{
    ViewData["Title"] = "PendingList";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Pending List</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NewspaperName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NewspaperLink)
            </th>
            <th>
                Country Name
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NewspaperInfo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Image)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Status)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.NewspaperName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NewspaperLink)
            </td>
            <td>
                    @{
                        var countries = (SelectList)ViewBag.Countries;
                        var countryName = countries.FirstOrDefault(c => c.Value == item.CountryId.ToString())?.Text;
                    }
                    <small>@countryName</small>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NewspaperInfo)
            </td>
            <td>
                    <img src="@item.Image" alt="Newspaper Image" style="height:60px; width:100px;" />
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Status)
            </td>
            <td>
                <a asp-action="Accept" asp-route-id="@item.Id" class="btn btn-primary">Accept</a> |
                <a asp-action="Reject" asp-route-id="@item.Id" class="btn btn-danger">Reject</a>
            </td>
        </tr>
}
    </tbody>
</table>
