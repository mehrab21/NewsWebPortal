@model IEnumerable<NewsWebPortal.Models.DTO.CountryDTO>

@{
    ViewData["Title"] = "fetchCountry";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>fetchCountry</h1>

<p>
    <a asp-controller="admin" asp-action="AdNewCountry">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Continent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Flag)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Continent)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
                <td>
                    <img src="@item.Flag" alt="Newspaper Image" style="max-height: 35px;" />
                </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                    <div>
                        <a class="btn btn-info" asp-action="EditCountry" asp-route-id="@item.Id">Edit</a> |
                        <a class="btn btn-danger" asp-action="DeleteCountry" asp-route-id="@item.Id">Delete</a>
                    </div>
            </td>
        </tr>
}
    </tbody>
</table>
