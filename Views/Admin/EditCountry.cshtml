@model NewsWebPortal.Models.DTO.CountryDTO

@{
    ViewData["Title"] = "EditCountry";
    Layout = "~/Views/Shared/_HomeLayout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-3">
    <h2 class="mb-0">Edit Country</h2>
    <a asp-action="fetchCountry" class="btn btn-warning">Back</a>
</div>
<hr />


<div class="row">
    <div class="col-md-12">
        <form asp-action="EditCountry" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="row">
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Continent" class="control-label">Continent</label>
                        <select asp-for="Continent" asp-items="ViewBag.Continents" class="form-control">
                            <option value="">--- Select a Continent ---</option>
                        </select>
                        <span asp-validation-for="Continent" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-md-6">
                    <div class="form-group">
                        <label asp-for="Name" class="control-label">Country Name</label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <div class="form-group mt-3">
                
                <label asp-for="Flag" class="control-label">Country Flag</label>
                <br />
                <img src="@Model.Flag" style="width:300px; height: 200px" />
                <input asp-for="Flag" class="form-control" type="file" />
                <span asp-validation-for="Flag" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <label asp-for="Description" class="control-label">Description</label>
                <textarea asp-for="Description" class="form-control" rows="6"></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Submit" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

