<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - NewsWebPortal</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/NewsWebPortal.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                <ul class="navbar-nav">
                    <li class="nav-item">
                        <a class="nav-link text-dark" asp-area="" asp-controller="Admin" asp-action="Index">Admin</a>
                    </li>
                </ul>
                <ul class="navbar-nav">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle text-dark" id="navbarDropdown" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Hello @User.Identity?.Name!
                            </a>
                            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                <li>
                                    <form class="dropdown-item" asp-controller="Account" asp-action="Logout" method="post">
                                        <button type="submit" class="btn btn-link p-0 m-0 align-baseline">Logout</button>
                                    </form>
                                </li>
                            </ul>
                        </li>
                    }
                    else
                    {
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Login">Login</a>
                        </li>
                    }
                </ul>

            </div>
        </nav>
    </header>
    <div class=" flex-grow-1" style="background-color: #F4F6F9">
        <div class="row">
            <!-- Left Sidebar -->
            @if (User.Identity != null && User.Identity.IsAuthenticated)
            {
                <nav class="col-md-2 min-vh-100 p-2 text-white"
                     style="background-color: #343A40;">
                    <ul class="nav flex-column">
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="Admin" asp-action="Index">
                                <i class="fas fa-home me-2"></i>NewsPaper List
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="@Url.Action("AdNewsPaper", "admin")">
                                <i class="fas fa-user me-2"></i>Add NewsPaper
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" href="@Url.Action("AdNewCountry", "admin")">
                                <i class="fas fa-users me-2"></i>Add NewCountry
                            </a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="admin" asp-action="fetchCountry">
                                <i class="fas fa-list me-2"></i>Country List
                            </a>
                        </li>
                        
                        <li class="nav-item">
                            <a class="nav-link text-white" asp-controller="admin" asp-action="PendingList">
                                <i class="fas fa-shopping-cart me-2"></i>Pending Newspaper
                            </a>
                        </li>

                        <li class="nav-item">
                            <a class="nav-link text-white" asp-action="Feedback" asp-controller="home">
                                <i class="fas fa-comments me-2"></i>Feedbacks
                            </a>
                        </li>
                    </ul>
                </nav>
            }
            <!-- Main Content -->
            <main class="col-md-10 px-4 py-4">
                @RenderBody()
            </main>
        </div>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - NewsWebPortal - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
